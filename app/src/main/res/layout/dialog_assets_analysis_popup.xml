<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.mvvmappapplication.custom.HSTextView
        android:id="@+id/analysisPopupContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_30"
        android:textSize="@dimen/dimen_14"/>

    <LinearLayout
        android:id="@+id/analysisPopupForeignLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80">

            <com.example.mvvmappapplication.custom.HSDotView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dotColor="?attr/colorPrimary" />

            <com.example.mvvmappapplication.custom.HSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="italic"
                android:textSize="@dimen/dimen_14"
                android:textColor="?attr/colorOnPrimary"/>
        </RelativeLayout>

        <com.example.mvvmappapplication.custom.HSImageView
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginRight="@dimen/dimen_6"
            android:scaleType="centerInside"
            android:src="?attr/ic_s_add"/>

        <RelativeLayout
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80">

            <com.example.mvvmappapplication.custom.HSDotView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dotColor="?attr/colorPrimary" />

            <com.example.mvvmappapplication.custom.HSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="italic"
                android:textSize="@dimen/dimen_14"
                android:textColor="?attr/colorOnPrimary"/>
        </RelativeLayout>

        <com.example.mvvmappapplication.custom.HSImageView
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginRight="@dimen/dimen_6"
            android:scaleType="centerInside"
            android:src="?attr/ic_s_add"/>

        <RelativeLayout
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80">

            <com.example.mvvmappapplication.custom.HSDotView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dotColor="?attr/colorPrimary" />

            <com.example.mvvmappapplication.custom.HSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="italic"
                android:textSize="@dimen/dimen_14"
                android:textColor="?attr/colorOnPrimary"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>