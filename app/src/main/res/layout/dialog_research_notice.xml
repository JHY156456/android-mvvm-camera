<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/iv_bannerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_212"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.mvvmappapplication.custom.HSMaterialButton
                android:id="@+id/btn_negative"
                style="@style/MaterialButton.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <com.example.mvvmappapplication.custom.HSMaterialButton
                android:id="@+id/btn_positive"
                style="@style/MaterialButton.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_bottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_12"
            android:button="@drawable/popup_check_box_selector"
            android:text="오늘하루 보지 않기"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_15" />

    </LinearLayout>

</FrameLayout>
