<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_layout_untact_floating_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.mvvmappapplication.custom.HSMaterialButton
                android:id="@+id/btn_layout_untact_floating_button_prev"
                style="@style/MaterialButton.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_layout_untact_floating_button_next" />

            <com.example.mvvmappapplication.custom.HSMaterialButton
                android:id="@+id/btn_layout_untact_floating_button_next"
                style="@style/MaterialButton.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/btn_layout_untact_floating_button_prev"
                app:layout_constraintRight_toRightOf="parent" />

            <com.example.mvvmappapplication.custom.HSView
                android:id="@+id/btn_layout_untact_floating_button_divider"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="@dimen/dimen_25"
                android:background="?attr/buttonDividerLineColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>