<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="524dp"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_474"
            android:minHeight="@dimen/dimen_474"
            android:background="@android:color/darker_gray">
            <com.example.mvvmappapplication.custom.HSImageView
                android:scaleType="fitXY"
                android:id="@+id/img_event_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
            <plus.steps.sapp.custom.HSImageButton
                android:id="@+id/ibtn_event_notice_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:background="@android:color/transparent"
                android:src="?attr/btn_close_white_selecter" />
        </RelativeLayout>
        <com.example.mvvmappapplication.custom.HSMaterialButton
            android:id="@+id/btn_bottom"
            style="@style/MaterialButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘 하루 보지 않기" />
    </LinearLayout>
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <WebView
        android:id="@+id/fullscreen_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>