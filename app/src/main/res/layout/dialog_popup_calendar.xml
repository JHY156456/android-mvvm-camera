<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_26"
        android:paddingBottom="@dimen/dimen_26"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layoutYearPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.mvvmappapplication.custom.HSTextView
                        android:id="@+id/textViewYearPre"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:background="?attr/btn_top_arrow"/>
                </LinearLayout>
                <com.example.mvvmappapplication.custom.HSTextView
                    android:id="@+id/textViewYear"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/dimen_18"
                    android:textColor="?attr/selectedColor"
                    android:textStyle="italic"/>
                <LinearLayout
                    android:id="@+id/layoutYearNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.mvvmappapplication.custom.HSTextView
                        android:id="@+id/textViewYearNext"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:background="?attr/btn_top_arrow_next"/>
                </LinearLayout>
            </LinearLayout>
            <com.example.mvvmappapplication.custom.HSView
                android:layout_width="@dimen/dimen_10"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layoutMonthPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.mvvmappapplication.custom.HSTextView
                        android:id="@+id/textViewMonthPre"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:background="?attr/btn_top_arrow"/>
                </LinearLayout>

                <com.example.mvvmappapplication.custom.HSTextView
                    android:id="@+id/textViewMonth"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/dimen_18"
                    android:textColor="?attr/selectedColor"
                    android:textStyle="italic"/>

                <LinearLayout
                    android:id="@+id/layoutMonthNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.mvvmappapplication.custom.HSTextView
                        android:id="@+id/textViewMonthNext"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:background="?attr/btn_top_arrow_next"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <GridView
            android:layout_marginTop="@dimen/dimen_12"
            android:id="@+id/gridViewCalendar"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:numColumns="7"
            android:listSelector="@color/transparent">
        </GridView>
    </LinearLayout>

</LinearLayout>