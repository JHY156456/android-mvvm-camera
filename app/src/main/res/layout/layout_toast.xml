<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.mvvmappapplication.custom.HSCardView
        android:id="@+id/toastLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_15"
        android:alpha="0.95"
        app:cardBackgroundColor="?attr/toastBackground"
        app:cardCornerRadius="@dimen/dimen_8"
        app:contentPaddingBottom="@dimen/dimen_10"
        app:contentPaddingLeft="@dimen/dimen_15"
        app:contentPaddingRight="@dimen/dimen_15"
        app:contentPaddingTop="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/dimen_320"
            android:minHeight="@dimen/dimen_40"
            android:orientation="vertical">

            <com.example.mvvmappapplication.custom.HSTextView
                android:id="@+id/toastMessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/dimen_20"
                android:textColor="?attr/colorSurface"
                android:textSize="@dimen/dimen_13" />

            <com.example.mvvmappapplication.custom.HSTextView
                android:id="@+id/toastMessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:gravity="center"
                android:minHeight="@dimen/dimen_18"
                android:textColor="?attr/colorSurface"
                android:textSize="@dimen/dimen_12"
                android:visibility="gone" />

        </LinearLayout>
    </com.example.mvvmappapplication.custom.HSCardView>
</LinearLayout>