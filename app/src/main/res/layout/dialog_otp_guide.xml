<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.mvvmappapplication.custom.HSTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dimen_44"
        android:text="OTP에 표시된 숫자를\n입력하세요."
        android:textSize="@dimen/dimen_14" />

    <com.example.mvvmappapplication.custom.HSTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="OTP 예시"
        android:textColor="?attr/subTextColor"
        android:textSize="@dimen/dimen_11" />

    <com.example.mvvmappapplication.custom.HSImageView
        android:layout_width="@dimen/dimen_250"
        android:layout_height="@dimen/dimen_131"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_20"
        android:background="?attr/img_otp" />
</LinearLayout>