<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.main.HSMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/my_toolbar"
            android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/nav_home"
             />
<!--            android:background="?attr/windowBackground"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Home">

            </TextView>
        <FrameLayout
            android:id="@+id/bottomMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_menu_height"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dimen_10">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick">
<!--                android:background="?attr/mainTabBackground"-->

                <com.example.mvvmappapplication.custom.HSView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/cardview_dark_background"

                    />
<!--                android:background="?attr/listLineColor"-->

                <FrameLayout
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/homeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_menu_home_selector"
                        android:button="@null"
                        android:onClick="onClick" />

                    <!-- badge -->
                    <com.example.mvvmappapplication.custom.HSDotView
                        android:id="@+id/newItemBadge"
                        android:layout_width="@dimen/dimen_6"
                        android:layout_height="@dimen/dimen_6"
                        android:visibility="gone"

                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_24"
                        tools:visibility="visible" />
<!--                    app:dotColor="?attr/highColor"-->
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/camera"
                    app:layout_constraintStart_toEndOf="@+id/home"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/searchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_menu_search_selector"
                        android:button="@null"
                        android:onClick="onClick" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/camera"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/assets"
                    app:layout_constraintStart_toEndOf="@+id/search"
                    app:layout_constraintTop_toTopOf="parent">



            <com.example.mvvmappapplication.custom.HSRadioButton
                android:id="@+id/cameraBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_menu_camera_selector"
                android:checked="true"
                android:button="@null"
                android:onClick="onClick" />
        </FrameLayout>

                <FrameLayout
                    android:id="@+id/assets"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/myMenu"
                    app:layout_constraintStart_toEndOf="@+id/camera"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/assetsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:button="@null"
                        android:onClick="onClick" />
<!--                    android:background="@drawable/btn_menu_asset_selector"-->
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/myMenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/assets"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/myMenuBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_menu_mypage_selector"
                        android:button="@null"
                        android:onClick="onClick" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>