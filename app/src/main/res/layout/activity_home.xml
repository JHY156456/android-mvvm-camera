<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.main.HSMainActivity">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.mvvmappapplication.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/content"
                android:name="androidx.navigation.fragment.NavHostFragment"
                app:navGraph="@navigation/nav_home"
                app:defaultNavHost="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomMenuLayout"
                />
<!--                속성은 NavHostFragment 시스템 뒤로 버튼을 가로 채도록합니다. -->
<!--                단 하나만 NavHost기본값이 될 수 있습니다. -->
<!--                동일한 레이아웃 (예 : 두 개의 창 레이아웃)에 여러 호스트가있는 경우 하나의 기본값 만 지정해야합니다.-->

            <!--            android:background="?attr/windowBackground"-->
            <FrameLayout
                android:id="@+id/bottomMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_bottom_menu_height"
                android:layout_alignParentBottom="true"
                android:clipToPadding="false"
                android:paddingTop="@dimen/dimen_10">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <!--                android:background="?attr/mainTabBackground"-->

                    <com.example.mvvmappapplication.custom.HSView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/cardview_dark_background"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />
                    <!--                android:background="?attr/listLineColor"-->

                    <FrameLayout
                        android:id="@+id/home"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dimen_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/camera"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.example.mvvmappapplication.custom.HSRadioButton
                            android:id="@+id/homeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_menu_home_selector"
                            android:button="@null"
                            android:onClick="@{v->viewModel.onMenuClick(v)}"
                             />

                        <!-- badge -->
                        <com.example.mvvmappapplication.custom.HSDotView
                            android:id="@+id/newItemBadge"
                            android:layout_width="@dimen/dimen_6"
                            android:layout_height="@dimen/dimen_6"
                            android:layout_gravity="right"

                            android:layout_marginTop="@dimen/dimen_16"
                            android:layout_marginRight="@dimen/dimen_24"
                            android:visibility="gone"
                            tools:visibility="visible" />
                        <!--                    app:dotColor="?attr/highColor"-->
                    </FrameLayout>

<!--                    <FrameLayout-->
<!--                        android:id="@+id/search"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_marginTop="@dimen/dimen_1"-->
<!--                        -->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        app:layout_constraintEnd_toStartOf="@+id/camera"-->
<!--                        app:layout_constraintStart_toEndOf="@+id/home"-->
<!--                        app:layout_constraintTop_toTopOf="parent">-->

<!--                        <com.example.mvvmappapplication.custom.HSRadioButton-->
<!--                            android:id="@+id/searchBtn"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:background="@drawable/btn_menu_search_selector"-->
<!--                            android:button="@null"-->
<!--                             />-->

<!--                    </FrameLayout>-->

                    <FrameLayout
                        android:id="@+id/camera"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dimen_1"
                        
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/assets"
                        app:layout_constraintStart_toEndOf="@+id/home"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.example.mvvmappapplication.custom.HSRadioButton
                            android:id="@+id/cameraBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_menu_camera_selector"
                            android:button="@null"
                            android:checked="true"
                            android:onClick="@{v->viewModel.onMenuClick(v)}"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/assets"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dimen_1"
                        
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/myMenu"
                        app:layout_constraintStart_toEndOf="@+id/camera"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.example.mvvmappapplication.custom.HSRadioButton
                            android:id="@+id/assetsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:button="@null"
                             />
                        <!--                    android:background="@drawable/btn_menu_asset_selector"-->
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/myMenu"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dimen_1"
                        
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/assets"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.example.mvvmappapplication.custom.HSRadioButton
                            android:id="@+id/myMenuBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_menu_mypage_selector"
                            android:button="@null"
                            android:onClick="@{v->viewModel.onMenuClick(v)}" />
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>