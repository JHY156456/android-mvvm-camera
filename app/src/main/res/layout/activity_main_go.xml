<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.main.HSMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.mvvmappapplication.custom.HSRelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/windowBackground" />

        <FrameLayout
            android:id="@+id/bottomMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_menu_height"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dimen_10">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/mainTabBackground"
                android:onClick="onClick">

                <com.example.mvvmappapplication.custom.HSView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_1"
                    android:background="?attr/listLineColor" />

                <FrameLayout
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/homeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/btn_menu_home_selector"
                        android:button="@null"
                        android:onClick="onClick" />

                    <!-- badge -->
                    <com.example.mvvmappapplication.custom.HSDotView
                        android:id="@+id/newItemBadge"
                        android:layout_width="@dimen/dimen_6"
                        android:layout_height="@dimen/dimen_6"
                        android:visibility="gone"
                        app:dotColor="?attr/highColor"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_24"
                        tools:visibility="visible" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/watchlis"
                    app:layout_constraintStart_toEndOf="@+id/home"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/searchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/btn_menu_search_selector"
                        android:button="@null"
                        android:onClick="onClick" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/watchlis"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/assets"
                    app:layout_constraintStart_toEndOf="@+id/search"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/watchlisBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/btn_menu_watchlist_selector"
                        android:button="@null"
                        android:onClick="onClick" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/assets"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/myMenu"
                    app:layout_constraintStart_toEndOf="@+id/watchlis"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/assetsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/btn_menu_asset_selector"
                        android:button="@null"
                        android:onClick="onClick" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/myMenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/assets"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.mvvmappapplication.custom.HSRadioButton
                        android:id="@+id/myMenuBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/btn_menu_mypage_selector"
                        android:button="@null"
                        android:onClick="onClick" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

    </RelativeLayout>

</layout>