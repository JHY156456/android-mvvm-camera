            android:id="@+id/action_post_fragment_to_post_detail_fragment2"
            app:destination="@id/post_detail_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
