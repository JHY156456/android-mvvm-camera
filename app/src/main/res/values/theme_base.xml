<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button -->
    <style name="BaseTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/dimen_14</item>
<!--        <item name="android:textColor">?attr/buttonTextColor</item> 일반팝업 버튼 오류로 미적용 함 -->
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/buttonBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- MaterialButton -->
    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">@dimen/dimen_88</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/dimen_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.005</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <!-- Primary MaterialButton -->
    <style name="MaterialButton.Primary" parent="MaterialButton">
        <item name="android:textColor">?attr/primary_text_selector</item>
        <item name="android:backgroundTint">?attr/primary_background_selector</item>
        <item name="iconTint">?attr/primary_text_selector</item>
    </style>

    <style name="MaterialButton.Primary.Round" parent="MaterialButton.Primary">
        <item name="materialButtonType">round</item>
    </style>

    <style name="MaterialButton.Primary.Ellipse" parent="MaterialButton.Primary">
        <item name="materialButtonType">ellipse</item>
    </style>

    <!-- Secondary MaterialButton -->
    <style name="MaterialButton.Secondary" parent="MaterialButton">
        <item name="android:textColor">@color/secondary_red_text_selector</item>
        <item name="android:backgroundTint">@color/secondary_red_background_selector</item>
        <item name="iconTint">@color/secondary_red_text_selector</item>
    </style>

    <style name="MaterialButton.Secondary.Round" parent="MaterialButton.Secondary">
        <item name="materialButtonType">round</item>
    </style>

    <style name="MaterialButton.Secondary.Ellipse" parent="MaterialButton.Secondary">
        <item name="materialButtonType">ellipse</item>
    </style>

    <!-- Surface MaterialButton -->
    <style name="MaterialButton.Surface" parent="MaterialButton">
        <item name="android:textColor">?attr/surface_text_selector</item>
        <item name="android:backgroundTint">?attr/surface_background_selector</item>
        <item name="iconTint">?attr/surface_text_selector</item>
    </style>

    <style name="MaterialButton.Surface.Round" parent="MaterialButton.Surface">
        <item name="materialButtonType">round</item>
    </style>

    <style name="MaterialButton.Surface.Ellipse" parent="MaterialButton.Surface">
        <item name="materialButtonType">ellipse</item>
    </style>

    <!-- Outline MaterialButton -->
    <style name="MaterialButton.Outline" parent="MaterialButton">
        <item name="android:textColor">?attr/outline_stroke_text_selector</item>
        <item name="android:backgroundTint">?attr/outline_background_selector</item>
        <item name="strokeColor">?attr/outline_stroke_selector</item>
        <item name="strokeWidth">@dimen/dimen_1</item>
        <item name="iconTint">?attr/outline_stroke_text_selector</item>
    </style>

    <style name="MaterialButton.Outline.Round" parent="MaterialButton.Outline">
        <item name="materialButtonType">round</item>
        <item name="cornerRadius">@dimen/dimen_4</item>
    </style>

    <style name="MaterialButton.Outline.Ellipse" parent="MaterialButton.Outline">
        <item name="materialButtonType">ellipse</item>
    </style>

    <style name="MaterialButton.Outline.Ellipse.Reverse" parent="MaterialButton.Outline.Ellipse">
        <item name="android:textColor">?attr/outline_stroke_text_reverse_selector</item>
        <item name="strokeColor">?attr/outline_stroke_reverse_selector</item>
        <item name="iconTint">?attr/outline_stroke_text_reverse_selector</item>
    </style>

    <!-- EditText -->
    <style name="BaseTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">@dimen/dimen_35</item>
        <item name="android:textSize">@dimen/dimen_20</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
<!--        <item name="android:textCursorDrawable">@drawable/cursor_color</item>-->
<!--        <item name="android:background">?attr/input_line_selector</item>-->
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:colorControlNormal">?android:attr/colorControlNormal</item>
        <item name="android:colorControlActivated">?android:attr/colorControlActivated</item>
    </style>

    <!-- CheckBox -->
    <style name="BaseTheme.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/dimen_14</item>
        <item name="android:textColor">?attr/checkbox_textcolor</item>
        <item name="android:button">?attr/checkbox_selector</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/checkbox_paddingLeft</item>
    </style>

    <!-- Switch -->
    <style name="BaseTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:minWidth">@dimen/dimen_43</item>
        <item name="android:minHeight">@dimen/dimen_23</item>
        <item name="track">@null</item>
        <item name="android:thumb">@null</item>
        <item name="android:background">?attr/btn_switch_selector</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>

    <!-- CardView -->
    <style name="BaseTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dimen_10</item>
        <item name="cardBackgroundColor">?attr/cardBackground</item>
<!--        <item name="strokeColor">?attr/cardStrockColor</item>-->
<!--        <item name="strokeWidth">@dimen/dimen_1</item>-->
        <item name="cardElevation">0dp</item>
<!--        <item name="android:adjustViewBounds">true</item>-->
<!--        <item name="cardUseCompatPadding">true</item>-->
<!--        <item name="cardPreventCornerOverlap">false</item>-->
    </style>

    <!-- Chip -->
    <style name="BaseTheme.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:textSize">@dimen/dimen_12</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>)
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:enabled">false</item>
        <item name="chipMinHeight">@dimen/dimen_30</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipStartPadding">@dimen/dimen_10</item>
        <item name="chipEndPadding">@dimen/dimen_6</item>
        <item name="chipBackgroundColor">?android:attr/colorBackground</item>
        <item name="chipStrokeColor">?attr/listLineColor</item>
    </style>

    <!-- ListView -->
    <style name="BaseTheme.ListView" parent="android:style/Widget.ListView">
        <item name="android:divider">?attr/listLineColor</item>
        <item name="android:dividerHeight">@dimen/dimen_1</item>
        <item name="android:listSelector">?attr/theme_listview_item_selector</item>
    </style>

    <!-- ProgressBar -->
    <style name="BaseTheme.HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">?attr/horizontalProgressBarDrawable</item>
        <item name="android:minHeight">@dimen/dimen_1</item>
        <item name="android:maxHeight">@dimen/dimen_1</item>
    </style>





    <style name="spinnerStyle" >
        <item name="android:divider">?attr/listLineColor</item>
        <item name="android:dividerHeight">@dimen/dimen_1</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
