<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
            <item
                android:top="@dimen/dimen_5"
                android:bottom="@dimen/dimen_5"
                android:left="@dimen/dimen_1"
                android:right="@dimen/dimen_1">
                <shape android:shape="oval">
                    <stroke android:width="@dimen/dimen_2" android:color="@color/color_000000" />
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>