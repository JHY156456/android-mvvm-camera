<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dimen_2" android:color="@color/color_979797"/>
            <corners android:radius="@dimen/dimen_8" />
            <padding android:left="@dimen/dimen_10" android:right="@dimen/dimen_10" />
            <solid android:color="@color/color_979797" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/dimen_2" android:color="@color/color_979797"/>
            <corners android:radius="@dimen/dimen_8" />
            <padding android:left="@dimen/dimen_10" android:right="@dimen/dimen_10" />
            <solid android:color="@color/color_ffffff" />
        </shape>
    </item>

    <item android:state_enabled="false">
